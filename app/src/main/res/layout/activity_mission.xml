<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/mission_toolbar"
        android:layout_height="55.0dip"
        android:layout_width="match_parent"
        android:background="#ffcc33"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/mission_back"
            android:layout_width="38.0dip"
            android:layout_height="38.0dip"
            android:layout_marginLeft="8.0dip"
            android:src="@drawable/system_back"/>
        <ImageView
            android:id="@+id/mission_delete"
            android:layout_height="38.0dip"
            android:layout_width="38.0dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10.0dip"
            android:src="@drawable/delete"/>
        <ImageView
            android:id="@+id/mission_clock"
            android:layout_height="38.0dip"
            android:layout_width="38.0dip"
            android:layout_toLeftOf="@id/mission_delete"
            android:paddingRight="10.0dip"
            android:src="@drawable/clock" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mission_toolbar"
        android:background="#fffacd">
        <EditText
            android:background="@null"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginBottom="10.0dip"
            android:layout_marginTop="10.0dip"
            android:textColor="#000"
            android:gravity="start"
            android:textSize="20.0sp"/>
    </RelativeLayout>

</RelativeLayout>

