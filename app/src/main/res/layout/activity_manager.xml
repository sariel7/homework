<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffacd"
    >

    <RelativeLayout
        android:id="@+id/manager_bar"
        android:layout_height="45.0dip"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:background="#ffcc33">
        <ImageView
            android:id="@+id/manager_title_back"
            android:layout_width="31.0dip"
            android:layout_height="31.0dip"
            android:layout_marginLeft="7.0dip"
            android:layout_marginTop="7.0dip"
            android:src="@drawable/system_back"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/manager_input"
        android:layout_below="@id/manager_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40.0dip"
        android:layout_marginRight="40.0dip"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/manager_time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/manager_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20.0dip"
                android:gravity="center"
                android:text="时间"
                android:textColor="#000"
                android:textSize="18.0sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38.0dip"
                android:layout_marginRight="20.0dip"
                android:background="@drawable/content_box_bg"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/manager_place_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/manager_place"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20.0dip"
                android:gravity="center"
                android:text="地点"
                android:textColor="#000"
                android:textSize="18.0sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38.0dip"
                android:layout_marginRight="20.0dip"
                android:background="@drawable/content_box_bg"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/manager_receiver_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/manager_receiver"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15.0dip"
                android:gravity="center"
                android:text="接收方"
                android:textColor="#000"
                android:textSize="18.0sp" />
            <EditText
                android:id="@+id/manager_receiver_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24.0dip"
                android:layout_marginRight="20.0dip"
                android:background="@drawable/content_box_bg"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/manager_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/manager_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20.0dip"
                android:gravity="center_horizontal"
                android:text="内容"
                android:layout_marginTop="10.0dip"
                android:textColor="#000"
                android:textSize="18.0sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3"
                android:gravity="top"
                android:layout_marginLeft="38.0dip"
                android:layout_marginRight="20.0dip"
                android:background="@drawable/content_box_bg"
                android:singleLine="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/manager_content_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/manager_sure"
                android:background="#cbc547"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="85.0dip"
                android:gravity="center_horizontal"
                android:text="确定"
                android:layout_marginTop="10.0dip"
                android:textColor="#000"
                android:textSize="21.0sp" />
            <TextView
                android:id="@+id/manager_rewrite"
                android:background="#cbc547"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="80.0dip"
                android:gravity="center_horizontal"
                android:text="重置"
                android:layout_marginTop="10.0dip"
                android:textColor="#000"
                android:textSize="21.0sp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/manager_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="45.0dip"
        android:layout_alignParentBottom="true"
        android:background="#fdb933">

    </RelativeLayout>

</RelativeLayout>
