<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffacd"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/land_linear_1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="用户名"
            android:textColor="#11264f"
            android:textSize="25sp"
            android:layout_marginLeft="50.0dip"/>
        <EditText
            android:id="@+id/user_name_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40.0dip"
            android:layout_marginRight="50.0dip"
            android:background="#fff"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/land_linear_2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="25.0dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="密码"
            android:textColor="#11264f"
            android:textSize="25sp"
            android:layout_marginLeft="60.0dip"/>
        <EditText
            android:id="@+id/password_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="55.0dip"
            android:layout_marginRight="50.0dip"
            android:background="#fff"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/land_linear_3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="35.0dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="注册"
            android:background="#2585a6"
            android:textColor="#11264f"
            android:textSize="25sp"
            android:layout_marginLeft="120.0dip"/>
        <TextView
            android:id="@+id/sign_in"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="登录"
            android:background="#2585a6"
            android:textColor="#11264f"
            android:textSize="25sp"
            android:layout_marginLeft="60.0dip"/>

    </LinearLayout>

</LinearLayout>
